<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carlos.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|smallestScreenSize"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.CancionesFavoritasActivity"
            android:label="@string/title_activity_favoritos"
            android:parentActivityName=".Activities.MainActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Activities.MisCancionesActivity"
            android:label="@string/title_activity_mis_canciones"
            android:parentActivityName=".Activities.MainActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Activities.AlbumesActivity"
            android:label="@string/title_activity_albumes"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing">

        </activity>
    </application>

</manifest>